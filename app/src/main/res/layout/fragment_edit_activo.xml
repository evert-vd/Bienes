<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evertvd.bienes.vista.fragments.EditActivo">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_bar_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        tools:context="com.evertvd.bienes.vista.activitys.BarScanner">

        <!--Edit-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >


                        <EditText
                            android:id="@+id/txtDescipcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:hint="Descripción"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C.Sigaf"/>

                            <EditText
                                android:id="@+id/txtCodigo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:editable="false"
                                android:hint="C.Sigaf"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C.Barras"/>

                            <EditText
                                android:id="@+id/txtBarras"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:hint="C.Barras"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="O/C"/>

                            <EditText
                                android:id="@+id/txtOrdenCompra"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:editable="false"
                                android:hint="O/C"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Factura"/>

                            <EditText
                                android:id="@+id/txtFactura"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:editable="false"
                                android:hint="N° Factura"/>
                        </LinearLayout>

                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F.Compra"/>

                        <EditText
                            android:id="@+id/txtFecha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:editable="false"
                            android:hint="F.Compra"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Catálogo"/>

                        <AutoCompleteTextView
                            android:id="@+id/txtCatalogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:hint="Catálogo"/>
                    </LinearLayout>
                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Empresa"/>

                            <EditText
                                android:id="@+id/txtEmpresa"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:editable="false"
                                android:hint="Empresa"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Departamento"/>

                            <AutoCompleteTextView
                                android:id="@+id/txtDepartamento"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:hint="Departamento"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sede"/>

                            <AutoCompleteTextView
                                android:id="@+id/txtSede"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:hint="Sede"/>
                        </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación"/>

                        <AutoCompleteTextView
                            android:id="@+id/txtUbicacion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:hint="Ubicación"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C.R"/>
                            <EditText
                                android:id="@+id/txtCodCentro"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:editable="false"
                                android:hint="C.R"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Centro de Responsabilidad"/>

                            <AutoCompleteTextView
                                android:id="@+id/txtCentro"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:hint="Centro de Responsabilidad"/>
                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Responsable"/>
                        <AutoCompleteTextView
                            android:id="@+id/txtResponsable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:ems="10"
                            android:hint="Responsable"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Placa"/>

                        <AutoCompleteTextView
                            android:id="@+id/txtPlaca"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:hint="Placa"/>
                    </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Marca"/>

                            <AutoCompleteTextView
                                android:id="@+id/txtMarca"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:hint="Marca"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Modelo"/>

                            <AutoCompleteTextView
                                android:id="@+id/txtModelo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:hint="Modelo"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Serie"/>
                            <EditText
                                android:id="@+id/txtSerie"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12dp"
                                android:hint="Serie"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_save"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</FrameLayout>
