<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_collage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.evertvd.bienes.vista.activitys.CollageActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorGreyLighten_1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/ic_save"
                android:text="Guardar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"/>
        </LinearLayout>


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|end">



                    <com.allenxuan.xuanyihuang.xuanimageview.XuanImageView
                        android:id="@+id/photo_view1"
                        android:layout_width="330dp"
                        android:layout_height="260dp"
                        android:scaleType="matrix"
                        android:gravity="center"
                        app:AutoRotateCategory="2"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@android:color/background_dark"/>

                    <ImageButton
                        android:id="@+id/btnFoto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/ic_menu_camera"/>
                    <ImageButton
                        android:id="@+id/btnClose1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:visibility="gone"
                        android:background="@drawable/ic_close"/>


                    <ImageButton
                        android:id="@+id/btnRotar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_rotate"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|end">

                        <com.allenxuan.xuanyihuang.xuanimageview.XuanImageView
                            android:id="@+id/photo_view2"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:background="@color/cardview_dark_background">
                        </com.allenxuan.xuanyihuang.xuanimageview.XuanImageView>
                        <ImageButton
                            android:id="@+id/btnFoto2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:background="@drawable/ic_menu_camera"/>
                        <ImageButton
                            android:id="@+id/btnClose2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:visibility="gone"
                            android:background="@drawable/ic_close"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|end">
                        <com.allenxuan.xuanyihuang.xuanimageview.XuanImageView
                            android:id="@+id/photo_view3"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:background="@color/cardview_shadow_start_color"/>

                        <ImageButton
                            android:id="@+id/btnFoto3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:background="@drawable/ic_menu_camera"/>
                        <ImageButton
                            android:id="@+id/btnClose3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:visibility="gone"
                            android:background="@drawable/ic_close"/>
                    </RelativeLayout>
                </LinearLayout>



            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCombinar"
        android:layout_below="@+id/btnCombinar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />


</LinearLayout>
